{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet run -p src --server.urls=http://localhost:5000",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "development"
                }
            },
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet watch -p PeopleApi.sln run -p src --server.urls=http://localhost:5000",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "development"
                }
            },
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}